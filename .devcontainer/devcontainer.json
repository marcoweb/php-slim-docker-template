{
	"name": "PHP in Docker",
	"image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		}
	},
	"forwardPorts": [
		3306,
		80
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"zobo.php-intellisense"
			]
		}
	},
	"postCreateCommand": "composer update"
}
